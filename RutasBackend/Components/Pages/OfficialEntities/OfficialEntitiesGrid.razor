@using RutasBackend.Models.Bd
@using Radzen
@using Radzen.Blazor

<RadzenDataGrid Data="@Entities" TItem="OfficialEntity" AllowFiltering="true" AllowSorting="true" AllowPaging="true" PageSize="10">
    <Columns>
        <RadzenDataGridColumn TItem="OfficialEntity" Property="Name" Title="@NameTitle" />
        <RadzenDataGridColumn TItem="OfficialEntity" Sortable="false" Filterable="false" TextAlign="TextAlign.Center" Width="120px">
            <Template Context="entity">
                <RadzenButton Icon="edit" ButtonStyle="ButtonStyle.Light" Variant="Variant.Flat" Size="ButtonSize.Medium" Click="@(() => OnEdit.InvokeAsync(entity))" @onclick:stopPropagation="true" />
                <RadzenButton Icon="delete" ButtonStyle="ButtonStyle.Danger" Variant="Variant.Flat" Size="ButtonSize.Medium" Click="@(() => OnDelete.InvokeAsync(entity))" @onclick:stopPropagation="true" />
            </Template>
        </RadzenDataGridColumn>
    </Columns>
</RadzenDataGrid>

@code {
    [Parameter] public IEnumerable<OfficialEntity> Entities { get; set; }
    [Parameter] public string NameTitle { get; set; }
    [Parameter] public EventCallback<OfficialEntity> OnEdit { get; set; }
    [Parameter] public EventCallback<OfficialEntity> OnDelete { get; set; }
}
